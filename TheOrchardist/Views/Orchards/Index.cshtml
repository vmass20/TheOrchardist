@model IEnumerable<TheOrchardist.Data.Orchard>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrchardName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrchardMapDataUrl)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrchardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrchardMapDataUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrchardID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrchardID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrchardID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
