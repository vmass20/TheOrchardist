@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

}

<div style="margin-top:5px" id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://massatstorage.blob.core.windows.net/orchadistfiles/appleLimb.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:black">
                    Manage Your Orchard
                    <ul class="navbar-link"><li><a asp-page="/UserExamples/ManageAnywhereExample">Learn More</a></li></ul>
                </p>

            </div>
        </div>

        <div class="item">
            <img src="https://massatstorage.blob.core.windows.net/orchadistfiles/cherrybranch.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:black">
                    Create your own breeds.
                    <ul class="navbar-link"><li><a asp-page="/UserExamples/CreateExample">Learn More</a></li></ul>
                </p>

            </div>
        </div>

        <div class="item">
            <img src="https://massatstorage.blob.core.windows.net/orchadistfiles/peaches.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:black">
                    Fruit Tree Information.
                    <ul class="navbar-link"><li><a asp-page="/UserExamples/TreeInformationExample">Learn More</a></li></ul>
                </p>

            </div>
        </div>
        <div class="item">
            <img src="https://massatstorage.blob.core.windows.net/orchadistfiles/pearbranch.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:black">
                    Access anytime, anywhere.
                    <ul class="navbar-link"><li><a asp-page="/UserExamples/TrackingExample">Learn More</a></li></ul>
                </p>

            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    
</div>
